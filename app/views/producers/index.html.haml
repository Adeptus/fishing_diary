.page-header
  = link_to new_producer_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Producer
  %h1 Listing producers

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @producers.each do |producer|
        %tr
          %td= producer.name
          %td= link_to 'Show', producer
          %td= link_to 'Edit', edit_producer_path(producer)
          %td= link_to 'Destroy', producer, data: { confirm: 'Are you sure?' }, method: :delete

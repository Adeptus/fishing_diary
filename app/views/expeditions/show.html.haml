- model_class = Expedition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:start_at) + ':'
  %br
  = @expedition.start_at
%p
  %strong= model_class.human_attribute_name(:end_at) + ':'
  %br
  = @expedition.end_at
%p
  %strong= model_class.human_attribute_name(:place_id) + ':'
  %br
  = @expedition.place.name
%p
  %strong= model_class.human_attribute_name(:notes) + ':'
  %br
  = @expedition.notes


= link_to _("Dodaj ryby"), new_expedition_expedition_fish_path(@expedition), :class => 'btn btn-default'
= link_to t('.back', :default => t("helpers.links.back")), expeditions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_expedition_path(@expedition), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), expedition_path(@expedition), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

= render 'expedition_fish/list', expedition_fishes: @expedition.expedition_fishes
= link_to t('.new', :default => t("helpers.links.new")), new_expedition_expedition_fish_path(@expedition), :class => 'btn btn-primary'


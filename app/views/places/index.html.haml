.page-header
  %h1= _("Places")
%table.table.table-striped
  %thead
    %tr
      %th= _("Name")
      %th= _("Place type")
      %th= _("Address")
      %th= _("Actions")
  %tbody
    - @places.each do |place|
      %tr
        %td= link_to place.name, place_path(place)
        %td= place.place_type
        %td= place.address
        %td
          = link_to _("edit"), edit_place_path(place), class: 'btn btn-default btn-xs'
          = link_to _("destroy"), place_path(place), method: :delete, data: { confirm: _('Are you sure?') }, class: 'btn btn-xs btn-danger'

= link_to _("new"), new_place_path, class: 'btn btn-primary'

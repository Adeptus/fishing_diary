- model_class = Fish
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @fish.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @fish.description


= link_to t('.back', :default => t("helpers.links.back")), fish_index_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_fish_path(@fish), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), fish_path(@fish), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

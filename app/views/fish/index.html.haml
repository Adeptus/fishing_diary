- model_class = Fish
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @fish.each do |fish|
      %tr
        %td= link_to fish.id, fish_path(fish)
        %td= fish.name
        %td= fish.description
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_fish_path(fish), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), fish_path(fish), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_fish_path, :class => 'btn btn-primary'
